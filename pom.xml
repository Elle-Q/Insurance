		<target.branch>latest</target.branch>

		<!-- internal models -->
		<insurance.commons.version>1.0.0</insurance.commons.version>
		<insurance.configserver.version>1.0.0</insurance.configserver.version>
		<insurance.eureka.version>1.0.0</insurance.eureka.version>
