		<insurance.authz.version>1.0.0</insurance.authz.version>
		<insurance.gateway.version>1.0.0</insurance.gateway.version>
		<insurance.service-agg.version>1.0.0</insurance.service-agg.version>
		<insurance.dto.version>1.0.0</insurance.dto.version>
		<insurance.api.version>1.0.0</insurance.api.version>
		<insurance.components.version>1.0.0</insurance.components.version>
		<insurance.vo.version>1.0.0</insurance.vo.version>

		<!-- third party packages -->
		<spring-cloud.version>Dalston.SR4</spring-cloud.version>
		<apache.commons.codec.version>1.7</apache.commons.codec.version>
		<spotify.version>0.4.14</spotify.version>
		<org.slf4j.version>1.7.25</org.slf4j.version>
		<apache.commons.version>3.3</apache.commons.version>
		<springframework.version>4.3.10.RELEASE</springframework.version>
	</properties>

	<repositories>
		<repository>
			<id>aliyun maven</id>
			<url>http://maven.aliyun.com/nexus/content/groups/public/</url>
		</repository>
		<repository>
			<id>Central Repository</id>
			<url>http://central.maven.org/maven2/</url>
		</repository>
		<repository>
			<id>52north</id>
			<url>http://52north.org/maven/repo/releases/</url>
		</repository>
		<repository>
			<id>wso2</id>
			<url>http://dist.wso2.org/maven2/</url>
		</repository>
		<repository>
			<id>spring-repo</id>
			<url>https://mvnrepository.com/artifact/org.springframework/springloaded</url>
		</repository>
		<repository>
			<id>geotoolkit</id>
			<url>http://maven.geotoolkit.org/</url>
		</repository>
		<repository>
			<id>sonatype-snapshots</id>
			<name>Sontatype Snapshots</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

